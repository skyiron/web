{
  "name": "@opencloud-eu/design-system",
  "version": "0.0.0",
  "description": "OpenCloud Design System is used to design OpenCloud UI components",
  "keywords": [
    "vue design system",
    "design system",
    "vue.js",
    "vue",
    "design",
    "system"
  ],
  "homepage": "https://opencloud.design/",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencloud-eu/web",
    "directory": "packages/design-system"
  },
  "type": "module",
  "license": "AGPL-3.0",
  "author": "OpenCloud",
  "main": "src/index.ts",
  "private": false,
  "scripts": {
    "docs:dev": "node build/build-tokens.js && vitepress dev docs",
    "docs:build": "node build/build-tokens.js && vitepress build docs",
    "docs:preview": "node build/build-tokens.js && vitepress preview docs",
    "lint:stylelint": "stylelint './src/styles/**/*.scss' --cache",
    "tokens": "node build/build-tokens.js",
    "tokens:w": "onchange -i \"./src/tokens/**/*.json\" -- npm run tokens",
    "vite": "vite",
    "prepublishOnly": "rm -rf ./package && clean-publish && find package && cat package/package.json",
    "postpublish": "rm -rf ./package"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not Explorer > 0",
    "not ExplorerMobile > 0",
    "not BlackBerry > 0",
    "not OperaMini all",
    "not OperaMobile > 0"
  ],
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "directory": "package",
    "linkDirectory": false,
    "exports": {
      ".": {
        "default": "./dist/design-system.mjs",
        "require": "./dist/design-system.js",
        "types": "./dist/src/index.d.ts"
      },
      "./components": {
        "default": "./dist/design-system/components.mjs",
        "require": "./dist/design-system/components.js",
        "types": "./dist/src/components/index.d.ts"
      },
      "./composables": {
        "default": "./dist/design-system/composables.mjs",
        "require": "./dist/design-system/composables.js",
        "types": "./dist/src/composables/index.d.ts"
      },
      "./helpers": {
        "default": "./dist/design-system/helpers.mjs",
        "require": "./dist/design-system/helpers.js",
        "types": "./dist/src/helpers/index.d.ts"
      }
    }
  },
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./components": {
      "default": "./src/components/index.ts"
    },
    "./composables": {
      "default": "./src/composables/index.ts"
    },
    "./helpers": {
      "default": "./src/helpers/index.ts"
    },
    "./l10n": {
      "default": "./l10n/translations.json"
    }
  },
  "dependencies": {
    "@emoji-mart/data": "^1.2.1",
    "@popperjs/core": "^2.11.5",
    "deepmerge": "^4.2.2",
    "emoji-mart": "^5.6.0",
    "focus-trap": "^7.6.0",
    "focus-trap-vue": "^4.0.1",
    "fuse.js": "^7.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^3.5.0",
    "tippy.js": "^6.3.7",
    "vue-inline-svg": "^4.0.0",
    "vue-router": "^4.2.5",
    "vue-select": "^4.0.0-beta.6",
    "vue3-gettext": "^2.4.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@opencloud-eu/web-test-helpers": "workspace:*",
    "@vitejs/plugin-vue": "5.2.1",
    "clean-publish": "^5.0.0",
    "glob": "^11.0.0",
    "markdown-it-container": "^4.0.0",
    "onchange": "^7.1.0",
    "postcss": "^8.5.2",
    "process": "^0.11.10",
    "sass": "1.85.1",
    "sass-loader": "16.0.5",
    "sass-resources-loader": "^2.2.5",
    "style-dictionary": "^4.0.0",
    "style-value-types": "^5.0.0",
    "stylelint": "16.14.1",
    "stylelint-config-sass-guidelines": "^12.0.0",
    "stylelint-config-standard": "^37.0.0",
    "tinycolor2": "^1.6.0",
    "typescript": "5.7.3",
    "url": "^0.11.3",
    "vite": "^6.0.9",
    "vite-plugin-dts": "^4.2.3",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vitepress": "^1.6.3",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "vue": "^3.5.11"
  }
}
